<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="289dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="61dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="692dp"
        android:text="Leave Request Form"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold|italic" />


    <TextView
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="659dp"
        android:text="Please fill in the following details:"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textDate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-320dp"
        android:text=" Start Date:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="551dp"
        android:text="dd/mm/yyyy"
        android:textSize="28sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endDate"
        android:layout_width="377dp"
        android:layout_height="30dp"
        android:layout_above="@+id/textDate2"
        android:layout_alignStart="@+id/startDate"
        android:layout_alignEnd="@+id/startDate"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="-314dp"
        android:layout_marginBottom="1dp"
        android:text="End Date:"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textDate2"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="428dp"
        android:text="dd/mm/yyyy"
        android:textSize="28sp"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextReason"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="26dp"
        android:text="    Reason for Leave:"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTextReason"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="296dp"
        android:hint="Enter Reason for Leave" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="349dp"
        android:gravity="center"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="47dp"
        android:text="Submit Leave Request" />
</RelativeLayout>